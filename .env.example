# Copy to .env and fill in your values

# Narration Mode (IMPORTANT)
# - template: Pure templates, zero dependencies, instant response
# - hybrid: Templates + optional LLM polish (recommended)
# - llm: Full LLM generation (requires API key)
NARRATION_MODE=template

# Randomness Mode
# - secure: OS entropy (cryptographically secure, default)
# - deterministic: Seeded RNG for replay
# - weighted: Non-linear distribution
# - linear: Predictable progression
RANDOMNESS_MODE=secure

# Deterministic Mode Configuration (optional)
# Only used when RANDOMNESS_MODE=deterministic
RANDOMNESS_SEED=

# Non-linear Bias (0.0-1.0)
# 0 = linear distribution, 1 = highly non-linear
# Used with weighted mode
NON_LINEAR_BIAS=0.3

# OpenAI Configuration (OPTIONAL - only needed for hybrid/llm modes)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# System Configuration
DEFAULT_PERSONA=classic
LOG_LEVEL=INFO

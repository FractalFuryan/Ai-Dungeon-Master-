# Copy to .env and fill in your values

# Narration Mode (IMPORTANT)
# - template: Pure templates, zero dependencies, instant response
# - hybrid: Templates + optional LLM polish (recommended)
# - llm: Full LLM generation (requires API key)
NARRATION_MODE=template

# OpenAI Configuration (OPTIONAL - only needed for hybrid/llm modes)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# System Configuration
DEFAULT_PERSONA=classic
LOG_LEVEL=INFO
